<!-- Loop over each object in the projects array -->
{{#each hikes as |hike| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>
      <a href="/hike/{{hike.id}}">{{hike.hikeName}}</a>
    </h2>
    <div class="col-md-7">

      {{!-- Changed the font size of the hike info. --}}
      <h5>
        {{hike.time}}
      </h5>
      <h5> 
        {{hike.hikeLength}}
      </h5>
      <h5>
        {{hike.elevationChange}}
      </h5>
      </div>
      <h5>Created by {{hike.userName}}</h5>
  </div>
</div>
{{/each}}